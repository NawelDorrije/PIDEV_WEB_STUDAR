{% extends 'base.html.twig' %}

{% block title %}
    {% set currentHour = "now"|date('H') %}
    {% if currentHour >= 18 or currentHour < 6 %}
        Bonsoir
    {% else %}
        Bonjour 
    {% endif %}, {{ app.user.prenom ?? 'M.' }} | Tableau de Bord
{% endblock %}

{% block body %}
    {% set currentHour = "now"|date('H') %}
    {% set greeting = currentHour >= 18 or currentHour < 6 ? 'Bonsoir' : 'Bonjour' %}
    
    <div class="container py-4" style="max-width: 1200px;">
        <!-- Dashboard Header -->
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center flex-column flex-md-row">
                <div class="mb-3 mb-md-0">
                    <h1 class="h4 fw-normal mb-1">{{ greeting }}, {{ app.user.prenom ?? 'M.' }}</h1>
                    <p class="text-muted small">Gérez vos véhicules et vos missions de transport</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_voiture_new') }}" class="btn btn-outline-dark px-3">
                        <i class="fas fa-car me-1"></i>Ajouter Véhicule
                    </a>
                    <a href="{{ path('app_transport_new') }}" class="btn bg-orange text-white px-3">
                        <i class="fas fa-truck me-1"></i>Nouvelle Mission
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="bg-white border p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-orange">
                            <i class="fas fa-car fa-lg"></i>
                        </div>
                        <div>
                            <p class="small text-muted mb-1">Véhicules</p>
                            <h3 class="h5 mb-0">{{ voitures|length }}</h3>
                            <p class="small text-muted">{{ voitures|filter(v => v.disponibilite.value == 'Disponible')|length }} disponibles</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-white border p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-orange">
                            <i class="fas fa-truck fa-lg"></i>
                        </div>
                        <div>
                            <p class="small text-muted mb-1">Missions</p>
                            <h3 class="h5 mb-0">{{ stats.total_transports }}</h3>
                            <p class="small text-muted">{{ stats.transports_actifs }} actives</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-white border p-3 h-100">
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-orange">
                            <i class="fas fa-check-circle fa-lg"></i>
                        </div>
                        <div>
                            <p class="small text-muted mb-1">Missions complétées</p>
                            <h3 class="h5 mb-0">{{ stats.transports_completes }}</h3>
                            <p class="small text-muted">Ce mois</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row g-3">
            <!-- My Vehicles Section -->
            <div class="col-lg-6">
                <div class="bg-white border">
                    <div class="p-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h5 fw-normal mb-0">Mes Véhicules</h2>
                            <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-dark btn-sm px-2">
                                Voir tout
                            </a>
                        </div>
                    </div>
                    <div class="p-3">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="small bg-light">
                                    <tr>
                                        <th>Modèle</th>
                                        <th>N° Série</th>
                                        <th>Disponibilité</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for voiture in voitures|slice(0, 3) %}
                                        <tr>
                                            <td class="fw-normal">{{ voiture.model }}</td>
                                            <td class="small">{{ voiture.numSerie }}</td>
                                            <td>
                                                <span class="badge bg-transparent border 
                                                    {% if voiture.disponibilite.value == 'Disponible' %} text-dark border-dark
                                                    {% else %} text-orange border-orange
                                                    {% endif %} px-2 py-1">
                                                    {{ voiture.disponibilite.value }}
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_voiture_show', {'idVoiture': voiture.idVoiture}) }}" class="btn btn-outline-dark btn-sm">
                                                    Gérer
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">Aucun véhicule enregistré</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Current Transports Section -->
            <div class="col-lg-6">
                <div class="bg-white border">
                    <div class="p-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h5 fw-normal mb-0">Missions Actuelles</h2>
                            <a href="{{ path('app_transport_index') }}" class="btn btn-outline-dark btn-sm px-2">
                                Voir tout
                            </a>
                        </div>
                    </div>
                    <div class="p-3">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="small bg-light">
                                    <tr>
                                        <th>Trajet</th>
                                        <th>Véhicule</th>
                                        <th>Statut</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for transport in transports|filter(t => t.status != 'COMPLETE')|slice(0, 3) %}
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="small text-muted">De</span>
                                                    <span class="small">{{ transport.reservation.adresseDepart|u.truncate(15, '...') }}</span>
                                                    <span class="small text-muted mt-1">À</span>
                                                    <span class="small">{{ transport.reservation.adresseDestination|u.truncate(15, '...') }}</span>
                                                </div>
                                            </td>
                                            <td>
                                                {% if transport.voiture %}
                                                    <span class="badge bg-transparent border border-dark text-dark px-2 py-1">{{ transport.voiture.model|u.truncate(10, '...') }}</span>
                                                {% else %}
                                                    <span class="badge bg-transparent border border-muted text-muted px-2 py-1">Non assigné</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge bg-transparent 
                                                    {% if transport.status.value == 'Complété' %} text-dark border border-dark
                                                    {% elseif transport.status.value == 'Actif' %} text-orange border border-orange
                                                    {% else %} text-muted border border-muted
                                                    {% endif %} px-2 py-1">
                                                    {{ transport.status.value }}
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a href="{{ path('app_transport_show', {'id': transport.id}) }}" class="btn btn-outline-dark btn-sm">
                                                    Détails
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">Aucune mission en cours</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --orange: #FF6B00;
            --orange-light: rgba(255, 107, 0, 0.1);
        }
        .text-orange {
            color: var(--orange);
        }
        .border-orange {
            border-color: var(--orange);
        }
        .bg-orange {
            background-color: var(--orange);
        }
        .badge {
            font-weight: 400;
            border-radius: 0;
        }
        .table-hover tbody tr:hover {
            background-color: var(--orange-light);
        }
        .btn-outline-dark {
            border-radius: 0;
        }
        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
{% endblock %}