{# templates/reservation/track.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Suivre la Livraison{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        #map {
            height: 400px;
            width: 100%;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .simulation-controls {
            margin-top: 20px;
            text-align: center;
        }
        .btn-simulate {
            background-color: #4453A6;
            color: white;
            padding: 10px 20px;
            border-radius: 50px;
            font-weight: 600;
        }
        .btn-simulate:hover {
            background-color: #3a4791;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(68, 83, 166, 0.3);
        }
    </style>
{% endblock %}

{% block body %}
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card reservation-details">
                    <div class="card-header">
                        <h3><i class="fas fa-map-marker-alt"></i>Suivi de la Livraison #{{ reservation.id }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="map-container">
                            <div id="map"></div>
                        </div>
                        <div class="simulation-controls">
                            <button id="startSimulation" data-reservation-id="{{ reservation.id }}" class="btn btn-simulate">Lancer la Simulation</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% block javascripts %}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/@mercure/EventSourcePolyfill"></script>
    <script>
        var map = L.map('map').setView([48.8566, 2.3522], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Â© OpenStreetMap contributors'
        }).addTo(map);

        var marker = L.marker([48.8566, 2.3522]).addTo(map);

        // Subscribe to Mercure updates
        const eventSource = new EventSource('http://localhost:8000/.well-known/mercure?topic=tracking/{{ reservation.id }}');
        eventSource.onmessage = function(event) {
            const data = JSON.parse(event.data);
            marker.setLatLng([data.latitude, data.longitude]);
            map.panTo([data.latitude, data.longitude]);
        };

        // Start simulation on button click
        document.getElementById('startSimulation').addEventListener('click', function() {
            fetch('/api/tracking/simulate/' + this.dataset.reservationId, { method: 'POST' })
                .then(response => response.json())
                .then(data => console.log(data.status))
                .catch(error => console.error('Error:', error));
        });
    </script>
{% endblock %}
{% endblock %}