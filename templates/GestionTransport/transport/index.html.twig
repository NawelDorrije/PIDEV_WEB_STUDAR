{% extends 'base.html.twig' %}

{% block title %}Mes Transports{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Mes Transports</h1>
            <a href="{{ path('app_transport_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un transport
            </a>
        </div>

        {# Status Filter #}
        <div class="mb-4">
            <div class="btn-group" role="group">
                <a href="{{ path('app_transport_index') }}" 
                   class="btn btn-sm"
                   style="{% if app.request.query.get('status') is null %}
                       background-color: transparent;
                       border-color: #0d6efd;
                       color: #0d6efd;
                       border: 1px solid;
                   {% else %}
                       color: #0d6efd;
                       border-color: #0d6efd;
                       background-color: transparent;
                       border: 1px solid;
                   {% endif %}">
                    Tous
                </a>
                <a href="{{ path('app_transport_index', {'status': 'Actif'}) }}" 
                   class="btn btn-sm" 
                   style="{% if app.request.query.get('status') == 'Actif' %}
                       background-color: #ffc107; 
                       border-color: #ffc107;
                       color: #000;
                   {% else %}
                       color: #ffc107;
                       border-color: #ffc107;
                       background-color: transparent;
                   {% endif %}">
                    Actifs
                </a>
                <a href="{{ path('app_transport_index', {'status': 'Complété'}) }}" 
                   class="btn btn-sm"
                   style="{% if app.request.query.get('status') == 'Complété' %}
                       background-color: #6FE69B;
                       border-color: #6FE69B;
                       color: #000;
                   {% else %}
                       color: #6FE69B;
                       border-color: #6FE69B;
                       background-color: transparent;
                   {% endif %}">
                    Complétés
                </a>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Trajet</th>
                                <th>Trajet (km)</th>
                                <th>Tarif (TND)</th>
                                <th>Statut</th>
                                <th>Heure d'arrivée estimée</th>
                                <th>Voiture</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for transport in transports %}
                            {% if transport.voiture and transport.voiture.utilisateur and transport.voiture.utilisateur.cin == app.user.cin %}
                            <tr>
                                <td>{{ transport.id }}</td>
                                <td>
                                    {% if transport.reservation and transport.reservation.adresseDepart and transport.reservation.adresseDestination %}
                                        {{ transport.reservation.adresseDepart }} → {{ transport.reservation.adresseDestination }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ transport.trajetEnKm }} km</td>
                                <td>{{ transport.tarif }}</td>
                                <td>
                                    <span class="badge" 
                                          style="{% if transport.status.value == 'Complété' %}background-color: #6FE69B;
                                          {% elseif transport.status.value == 'Actif' %}background-color: #ffc107;
                                          {% else %}background-color: #6c757d;{% endif %}">
                                        {{ transport.status.value }}
                                    </span>
                                </td>
<td>
    {{ transport.reservation.tempsArrivage ? transport.reservation.tempsArrivage|date('d/m/Y H:i') : '' }}
</td>                                <td>
                                    {% if transport.voiture %}
                                        {{ transport.voiture.model }} ({{ transport.voiture.numSerie }})
                                    {% else %}
                                        <span class="text-muted">Non assignée</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_transport_show', {'id': transport.id}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_transport_delete', {'id': transport.id}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce transport ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport.id) }}">
                                            <button type="submit" class="btn btn-link text-danger p-0 border-0" style="background: none;">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-truck fa-3x mb-3"></i>
                                        <p>Aucun transport enregistré</p>
                                        <a href="{{ path('app_transport_new') }}" class="btn btn-primary mt-2">
                                            Créer votre premier transport
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <a href="{{ path('app_transport_home') }}" class="btn btn-link text-decoration-none ps-0">
            <i class="fas fa-arrow-left"></i> Retour à l'accueil
        </a>
    </div>
{% endblock %}