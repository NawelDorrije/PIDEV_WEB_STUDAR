<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title mb-4">
                        {% if form.vars.data and form.vars.data.idVoiture %}
                            Modifier le véhicule
                        {% else %}
                            Ajouter un nouveau véhicule
                        {% endif %}
                    </h2>

                    {% if form.vars.data and form.vars.data.utilisateur %}
                    <div class="mb-3">
                        <label class="form-label fw-bold">Transporteur</label>
                        <input type="text" class="form-control" readonly
                               value="{{ form.vars.data.utilisateur.cin }} - {{ form.vars.data.utilisateur.nom }} {{ form.vars.data.utilisateur.prenom }}">
                    </div>
                    {% endif %}

                    {{ form_start(form) }}
                        {{ form_row(form.model) }}
                        {{ form_row(form.numSerie) }}
                        
                        {# Image field with preview #}
                        <div class="mb-3">
                            {{ form_label(form.imageFile) }}
                            {{ form_widget(form.imageFile) }}
                            {{ form_errors(form.imageFile) }}
                            
                            {% if form.vars.data and form.vars.data.image %}
                                <div class="mt-2">
                                    <img src="{{ vich_uploader_asset(form.vars.data, 'imageFile') }}" 
                                         style="max-height: 150px;" 
                                         class="img-thumbnail">
                                </div>
                            {% endif %}
                        </div>

                        {{ form_row(form.disponibilite) }}
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_voiture_index') }}" class="btn btn-secondary">
                                {{ form.vars.data and form.vars.data.idVoiture ? 'Cancel' : 'Back to list' }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                {{ button_label|default(form.vars.data and form.vars.data.idVoiture ? 'Update' : 'Save') }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>