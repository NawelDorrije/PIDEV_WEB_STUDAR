{% extends 'base.html.twig' %}

{% block title %}Mes Véhicules{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Mes Véhicules</h1>
            <a href="{{ path('app_voiture_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter un véhicule
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Modèle</th>
                                <th>Numéro de série</th>
                                <th>Image</th>
                                <th>Disponibilité</th>
                                <th>Date d'ajout</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for voiture in voitures %}
                            {% if voiture.utilisateur and voiture.utilisateur.cin == app.user.cin %}
                            <tr>
                                <td>{{ voiture.model }}</td>
                                <td>{{ voiture.numSerie }}</td>
                                <td>
                                    {% if voiture.image %}
                                        <img src="{{ vich_uploader_asset(voiture, 'imageFile') }}" 
                                             alt="{{ voiture.model }}" 
                                             class="img-thumbnail"
                                             style="max-height: 80px; max-width: 80px;">
                                    {% else %}
                                        <img src="{{ asset('images/default-car.jpg') }}"
                                             alt="{{ voiture.model }}" 
                                             class="img-thumbnail"
                                             style="max-height: 80px; max-width: 80px;">
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-{{ voiture.disponibilite.value == 'DISPONIBLE' ? 'success' : 'warning' }}">
                                        {{ voiture.disponibilite.value }}
                                    </span>
                                </td>
                                <td>{{ voiture.timestamp ? voiture.timestamp|date('d/m/Y H:i') : '' }}</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_voiture_show', {'idVoiture': voiture.idVoiture}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_voiture_edit', {'idVoiture': voiture.idVoiture}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_voiture_delete', {'idVoiture': voiture.idVoiture}) }}" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce véhicule ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.idVoiture) }}">
                                            <button type="submit" class="btn btn-link text-danger p-0 border-0" style="background: none;">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-car fa-3x mb-3"></i>
                                        <p>Aucun véhicule enregistré</p>
                                        <a href="{{ path('app_voiture_new') }}" class="btn btn-primary mt-2">
                                            Ajouter un véhicule
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}