{# show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du Véhicule{% endblock %}

{% block body %}
<div class="container py-4" style="max-width: 1200px;">
    <h1 class="h4 fw-normal mb-4">Véhicule #{{ voiture.idVoiture }}</h1>

    <div class="bg-white border mb-4">
        <div class="row">
            <div class="col-md-6 p-4">
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <p class="small text-muted mb-1">Modèle</p>
                        <p>{{ voiture.model }}</p>
                    </li>
                    <li class="mb-3">
                        <p class="small text-muted mb-1">Numéro de série</p>
                        <p>{{ voiture.numSerie }}</p>
                    </li>
                    <li class="mb-3">
                        <p class="small text-muted mb-1">Disponibilité</p>
                        <span class="badge bg-transparent border 
                            {% if voiture.disponibilite.value == 'Disponible' %} text-dark border-dark
                            {% else %} text-orange border-orange
                            {% endif %} px-2 py-1">
                            {{ voiture.disponibilite.value }}
                        </span>
                    </li>
                    <li class="mb-3">
                        <p class="small text-muted mb-1">Date d'ajout</p>
                        <p>{{ voiture.timestamp ? voiture.timestamp|date('d/m/Y H:i') : '' }}</p>
                    </li>
                </ul>
            </div>
            <div class="col-md-6 p-4 bg-light">
                <div class="h-100 d-flex align-items-center justify-content-center">
                    {% if voiture.image %}
                        <img src="{{ vich_uploader_asset(voiture, 'imageFile') }}"
                             class="img-fluid" style="max-height: 250px;">
                    {% else %}
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-car fa-3x mb-3"></i>
                            <p>Aucune image disponible</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-dark rounded-0 px-4">
            ← Mes véhicules
        </a>
        <div class="d-flex gap-2">
            <a href="{{ path('app_voiture_edit', {'idVoiture': voiture.idVoiture}) }}" 
               class="btn btn-outline-dark rounded-0 px-4">
                Modifier
            </a>
            <form method="post" action="{{ path('app_voiture_delete', {'idVoiture': voiture.idVoiture}) }}" 
                  onsubmit="return confirm('Supprimer ce véhicule ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.idVoiture) }}">
                <button type="submit" class="btn btn-outline-dark rounded-0 px-4">
                    Supprimer
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}