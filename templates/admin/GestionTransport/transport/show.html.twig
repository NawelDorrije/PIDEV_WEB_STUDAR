{% extends 'base.html.twig' %}

{% block title %}Détails du Transport{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Détails du Transport #{{ transport.id }}</h1>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th class="w-25">Trajet</th>
                                        <td>{{ transport.trajetEnKm }} km</td>
                                    </tr>
                                    <tr>
                                        <th>Tarif(TND)</th>
                                        <td>{{ transport.tarif }} </td>
                                    </tr>
                                    <tr>
                                        <th>Statut</th>
                                        <td>
                                           <span class="badge 
        {% if transport.status.value == 'Complété' %}bg-success
        {% elseif transport.status.value == 'Actif' %}bg-warning
        {% else %}bg-secondary{% endif %}">
        {{ transport.status.value }}
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>{{ transport.timestamp ? transport.timestamp|date('d/m/Y H:i') : '' }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="card mt-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Vehicule assignée</h5>
                            </div>
                            <div class="card-body">
                                {% if transport.voiture %}
                                    <div class="d-flex align-items-center justify-content-center">
                                        {% if transport.voiture.image %}
                                            <img src="{{ vich_uploader_asset(transport.voiture, 'imageFile') }}" 
                                                 class="img-thumbnail me-3" 
                                                 style="max-height: 100px;">
                                        {% else %}
                                            <img src="{{ asset('images/default-car.jpg') }}" 
                                                 class="img-thumbnail me-3" 
                                                 style="max-height: 100px;">
                                        {% endif %}
                                        <div>
                                            <h6>{{ transport.voiture.model }}</h6>
                                            <p class="mb-1">Numéro de serie: {{ transport.voiture.numSerie }}</p>
                                            <p class="mb-1">Disponibilité: 
                                                <span class="badge bg-{{ transport.voiture.disponibilite.value == 'DISPONIBLE' ? 'success' : 'warning' }}">
                                                    {{ transport.voiture.disponibilite.value }}
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                {% else %}
                                    <p class="text-muted text-center">Aucune voiture assignée</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_gestion_transport_dashboard') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}