<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <title>{% block title %}StuDar{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <style>
                /* Theme-specific styles for header/footer */
                body.theme-dark .sub-header,
                body.theme-dark .header-area,
                body.theme-dark footer {
                    background-color: #2c2c2c !important;
                    color: #ffffff !important;
                }
                body.theme-dark .sub-header a,
                body.theme-dark .main-nav a,
                body.theme-dark footer a {
                    color: #ffffff !important;
                }
                body.theme-dark .sub-header a:hover,
                body.theme-dark .main-nav a:hover,
                body.theme-dark footer a:hover {
                    color: #f35525 !important;
                }
                body.theme-dark .dropdown-menu {
                    background-color: #3a3a3a !important;
                    border-color: #555 !important;
                }
                body.theme-dark .dropdown-menu a {
                    color: #ffffff !important;
                }
                body.theme-dark .dropdown-menu a:hover {
                    background-color: #4a4a4a !important;
                }
            </style>
            <meta name="csrf-token" content="{{ csrf_token('default') }}">
        {% endblock %}

        {% block css %}
            <!-- Additional styles can be added in child templates -->
        {% endblock %}
    </head>
    <body data-theme="{{ app.user.theme ?? 'light' }}">
        <!-- ***** Preloader Start ***** -->
        <div id="js-preloader" class="js-preloader">
            <div class="preloader-inner">
                <span class="dot"></span>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- ***** Preloader End ***** -->

        <div class="sub-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8">
                        <ul class="info">
                            <li><i class="fa fa-envelope"></i> studar21@gmail.com</li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <ul class="social-links">
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-facebook"></i></a></li>
                            <li><a href="https://x.com/minthu" target="_blank"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-linkedin"></i></a></li>
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- ***** Header Area Start ***** -->
        <header class="header-area header-sticky">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="main-nav">
                            <!-- ***** Logo Start ***** -->
                            <a href="{{ path('app_home') }}" class="logo">
                                <img class="logo" src="{{ asset('images/logo.png') }}" alt="Villa Agency">
                            </a>
                            <!-- ***** Logo End ***** -->

                            <!-- ***** Menu Start ***** -->
                            <ul class="nav">
                                <li><a href="{{ path('app_home') }}" class="active">Accueil</a></li>

                                <!-- Services Dropdown -->
                                <li class="dropdown">
                                    <a href="#">Services <i class="fa fa-caret-down"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('app_home') }}">Logements</a></li>
                                        <li><a href="{{ path('app_home') }}">Meubles</a></li>
                                        <li><a href="{{ path('app_home') }}">Transports</a></li>
                                    </ul>
                                </li>

                                <!-- Agenda Dropdown -->
                                <li class="dropdown">
                                    <a href="#">Agenda <i class="fa fa-caret-down"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('app_home') }}">Réservation des logements</a></li>
                                        <li><a href="{{ path('app_home') }}">Réservation des transporteurs</a></li>
                                        <li><a href="{{ path('app_home') }}">Rendez-vous</a></li>
                                    </ul>
                                </li>

                                <li><a href="{{ path('app_home') }}">Chat AI</a></li>
                                <li><a href="{{ path('app_home') }}"><i class="fa fa-calendar"></i></a></li>
                                {% if app.user %}
                                    <li><a href="{{ path('app_utilisateur_show', {'cin': app.user.cin}) }}"><i class="fa fa-user"></i></a></li>
                                {% else %}
                                    <li><a href="{{ path('app_utilisateur_signin') }}"><i class="fa fa-user"></i></a></li>
                                {% endif %}
                                <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out"></i></a></li>
                            </ul>

                            <a class='menu-trigger'>
                                <span>Menu</span>
                            </a>
                            <!-- ***** Menu End ***** -->
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- ***** Header Area End ***** -->

        {% block body %}
            <!-- Main content will be inserted here by child templates -->
        {% endblock %}

        <footer>
            <div class="container">
                <div class="col-lg-8">
                    <p>Copyright © 2048 Villa Agency Co., Ltd. All rights reserved. 
                    Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a></p>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script>
                console.log('START_BASE_JS');
                function applyTheme(theme) {
                    console.log('Applying theme:', theme);
                    document.body.className = `theme-${theme}`;
                    console.log('Body class set to:', document.body.className);
                    // Force style recalculation
                    document.body.offsetHeight;
                }
                document.addEventListener('DOMContentLoaded', function() {
                    const userTheme = '{{ app.user.theme ?? 'light' }}';
                    const theme = document.body.dataset.theme || 'light';
                    console.log('User theme from Twig:', userTheme);
                    console.log('Theme from data-theme:', theme);
                    console.log('Is user logged in:', {{ app.user ? 'true' : 'false' }});
                    console.log('Current route:', '{{ app.current_route ?? 'unknown' }}');
                    if (!theme) {
                        console.warn('No theme set, defaulting to light');
                    }
                    applyTheme(theme);
                });
                console.log('END_BASE_JS');
            </script>
        {% endblock %}

        {% block js %}
            <!-- Additional scripts can be added in child templates -->
        {% endblock %}
    </body>
</html>
