<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <title>{% block title %}StuDar{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block css %}
            <!-- Styles personnalisés ajoutés ici -->
        {% endblock %}
    </head>
    <body>
        <!-- ***** Preloader Start ***** -->
        <div id="js-preloader" class="js-preloader">
            <div class="preloader-inner">
                <span class="dot"></span>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- ***** Preloader End ***** -->

        <div class="sub-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-8">
                        <ul class="info">
                            <li><i class="fa fa-envelope"></i> studar21@gmail.com</li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <ul class="social-links">
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-facebook"></i></a></li>
                            <li><a href="https://x.com/minthu" target="_blank"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-linkedin"></i></a></li>
                            <li><a href="{{ path('app_home') }}"><i class="fab fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- ***** Header Area Start ***** -->
        <header class="header-area header-sticky">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="main-nav">
                            <!-- ***** Logo Start ***** -->
                            <a href="{{ path('app_home') }}" class="logo">
                                <img class="logo" src="{{ asset('images/logo.png') }}" alt="StuDar">
                            </a>
                            <!-- ***** Logo End ***** -->

                            <!-- ***** Menu Start ***** -->
                            <ul class="nav">
                                <li><a href="{{ path('app_home') }}" class="active">Accueil</a></li>

                                <!-- Services Dropdown avec Bootstrap -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Services
                                    </a>
                                    <ul class="dropdown-menu elegant-dropdown" aria-labelledby="servicesDropdown">
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Logements</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Meubles</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Transports</a></li>
                                    </ul>
                                </li>

                                <!-- Agenda Dropdown avec Bootstrap -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="agendaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Agenda
                                    </a>
                                    <ul class="dropdown-menu elegant-dropdown" aria-labelledby="agendaDropdown">
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Réservation des logements</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Réservation des transporteurs</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Rendez-vous</a></li>
                                    </ul>
                                </li>

                                <li><a href="{{ path('app_home') }}">Chat AI</a></li>
                                <li><a href="{{ path('app_gestion_meubles_lignes_panier') }}"><i class="bi bi-cart3"></i></a></li>
                                <!-- Icône de profil améliorée -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link profile-icon" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle"></i>
                                    </a>
                                    <ul class="dropdown-menu elegant-dropdown profile-dropdown" aria-labelledby="profileDropdown">
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Mon profil</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Paramètres</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_home') }}">Déconnexion</a></li>
                                    </ul>
                                </li>
                            </ul>

                            <a class="menu-trigger">
                                <span>Menu</span>
                            </a>
                            <!-- ***** Menu End ***** -->
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- ***** Header Area End ***** -->

        {% block body %}
            <!-- Le contenu principal sera inséré ici -->
        {% endblock %}

        <footer>
            <div class="container">
                <div class="col-lg-8">
                    <p>Copyright © 2048 Villa Agency Co., Ltd. All rights reserved. 
                    Design: <a rel="nofollow" href="https://templatemo.com" target="_blank">TemplateMo</a></p>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        {% block js %}
            <!-- Scripts supplémentaires ici -->
        {% endblock %}
    </body>
</html>