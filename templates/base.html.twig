            <script>
                // Theme application
                function applyTheme(theme) {
                    console.log('Applying theme:', theme);
                    document.body.className = `theme-${theme}`;
                    console.log('Body class set to:', document.body.className);
                    // Force style recalculation
                    document.body.offsetHeight;
                }

                // Apply theme on page load
                document.addEventListener('DOMContentLoaded', function() {
                    console.log('User theme from Twig:', '{{ app.user.theme ?? 'light' }}');
                    const body = document.body;
                    const theme = body.dataset.theme || 'light';
                    console.log('Theme from data-theme:', theme);
                    applyTheme(theme);

                    // View Toggle Functionality
                    const viewButtons = document.querySelectorAll('[data-view]');
                    viewButtons.forEach(btn => {
                        btn.addEventListener('click', function(e) {
                            e.preventDefault();
                            
                            // Set active button
                            viewButtons.forEach(b => b.classList.remove('active'));
                            this.classList.add('active');
                            
                            // Toggle views
                            const viewType = this.dataset.view;
                            document.querySelector('.rendezvous-list').style.display = 
                                viewType === 'list' ? 'block' : 'none';
                            document.querySelector('.rendezvous-calendar').style.display = 
                                viewType === 'calendar' ? 'block' : 'none';
                        });
                    });
                    
                    // Highlight current status filter
                    const currentStatus = new URL(window.location.href).searchParams.get('status');
                    if (currentStatus) {
                        const activeFilter = document.querySelector(`.status-filter a[href*="status=${currentStatus}"]`);
                        if (activeFilter) {
                            activeFilter.classList.add('active');
                        }
                    }

                    // Toggle mobile menu
                    document.querySelector('.menu-trigger').addEventListener('click', function() {
                        document.querySelector('.main-nav .nav').classList.toggle('active');
                    });
                });
            </script>
