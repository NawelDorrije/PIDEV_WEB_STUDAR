{% extends 'base.html.twig' %}

{% block title %}Liste des meubles{% endblock %}

{% block body %}
<div class="section">
    <div class="container">
        <h1>Liste des meubles</h1>
        {% if meubles is not empty %}
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Statut</th>
                        <th>Catégorie</th>
                    </tr>
                </thead>
                <tbody>
                    {% for meuble in meubles %}
                        <tr>
                            <td>{{ meuble.id }}</td>
                            <td>{{ meuble.nom }}</td>
                            <td>{{ meuble.prix }}</td>
                            <td>{{ meuble.statut }}</td>
                            <td>{{ meuble.categorie }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun meuble trouvé.</p>
        {% endif %}
        <a href="{{ path('app_gestion_meuble_ajouter') }}" class="btn btn-primary">Ajouter un meuble</a>
    </div>
</div>
{% endblock %}