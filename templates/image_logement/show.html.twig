{% extends 'base.html.twig' %}

{% block title %}Détails Image Logement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Détails de l'image logement</h1>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th class="w-25">ID</th>
                            <td>{{ image_logement.id }}</td>
                        </tr>
                        <tr>
                            <th>Logement</th>
                            <td>Logement #{{ image_logement.logement.id }}</td>
                        </tr>
                        <tr>
                            <th>URL de l'image</th>
                            <td>{{ image_logement.url }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex gap-2 mt-4">
                    <a href="{{ path('app_image_logement_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <a href="{{ path('app_image_logement_edit', {'id': image_logement.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Modifier
                    </a>
                    {{ include('image_logement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}