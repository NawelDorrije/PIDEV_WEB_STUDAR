{% extends 'base.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <div class="section best-deal">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h6>| Property Details</h6>
                        <h2>{{ logement.type }} Details</h2>
                    </div>
                </div>
                
                <div class="col-lg-12">
                    <div class="tabs-content">
                        <div class="row">
                            <div class="nav-wrapper">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active">Main Information</button>
                                    </li>
                                </ul>
                            </div>
                            
                            <div class="tab-content">
                                <div class="tab-pane fade show active">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <div class="info-table">
                                                <ul>
                                                    <li>Number of Rooms <span>{{ logement.nbrChambre }}</span></li>
                                                    <li>Property Type <span>{{ logement.type }}</span></li>
                                                    <li>Price <span>{{ logement.prix }} €</span></li>
                                                    <li>Location <span>{{ logement.localisation }}</span></li>
                                                    <li>Address <span>{{ logement.adresse }}</span></li>
                                                    <li>Status <span>{{ logement.statut.value }}</span></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div id="map">
                                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12469.776493332698!2d-80.14036379941481!3d25.907788681148624!2m3!1f357.26927939317244!2f20.870722720054623!3f0!3m2!1i1024!2i768!4f35!3m3!1m2!1s0x88d9add4b4ac788f%3A0xe77469d09480fcdb!2sSunny%20Isles%20Beach!5e1!3m2!1sen!2sth!4v1642869952544!5m2!1sen!2sth" width="100%" height="500px" frameborder="0" style="border:0; border-radius: 10px; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.15);" allowfullscreen=""></iframe>
                                          </div>
                                          <div class="main-banner">
                                            <div class="owl-carousel owl-banner">
                                              {% for image in logement.imageLogements %}
                                                <div class="item item-{{ loop.index }}">
                                                  <img src="{{ image.url }}" alt="Image {{ loop.index }} du logement à {{ logement.localisation }}" class="img-fluid carousel-image">
                                             
                                                </div>
                                              {% else %}
                                                {# Fallback si aucune image #}
                                                <div class="item item-1">
                                                  <img src="{{ asset('assets/images/property-03.jpg') }}" alt="Image par défaut" class="img-fluid">
                                                
                                                </div>
                                              {% endfor %}
                                            </div>
                                          </div>
                                        
                                        <div class="col-lg-3">
                                            <h4>Property Description</h4>
                                            <p>{{ logement.description }}</p>
                                            <div class="icon-button mt-4">
                                                <a href="{{ path('app_logement_edit', {'id': logement.id}) }}" class="btn btn-primary">
                                                    <i class="fa fa-edit"></i> Edit Property
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="{{ path('app_logement_index') }}" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Back to List
                    </a>
                    
                    {{ include('logement/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}