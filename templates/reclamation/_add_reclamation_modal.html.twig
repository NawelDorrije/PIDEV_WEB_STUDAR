<div class="modal fade" id="addReclamationModal" tabindex="-1" role="dialog" aria-labelledby="addReclamationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addReclamationModalLabel">Ajouter une Réclamation</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <form id="add-reclamation-form" action="{{ path('app_reclamation_add', {'logementId': logement.id}) }}" method="post">
                    <div class="form-group">
                        <label for="reclamation-title">Titre</label>
                        <input type="text" class="form-control" id="reclamation-title" name="title" placeholder="Entrez le titre de la réclamation" required>
                    </div>
                    <div class="form-group">
                        <label for="reclamation-description">Description</label>
                        <textarea class="form-control" id="reclamation-description" name="description" rows="3" placeholder="Décrivez votre réclamation" required></textarea>
                    </div>
                    <input type="hidden" name="_token" value="{{ csrf_token('add_reclamation') }}">
                </form>
                <div id="form-error" class="error-message" style="display: none; color: #ff4444;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="submit-reclamation">Enregistrer</button>
            </div>
        </div>
    </div>
</div>

