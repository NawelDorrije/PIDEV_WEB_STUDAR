{% extends 'base.html.twig' %}

{% block title %}Modifier Rendez-vous{% endblock %}

{% block stylesheets %}
<style>
  /* Edit Page Specific Styles */
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&display=swap');
  
  .rendezvous-edit-section {
    padding: 80px 0;
    background-color: light;
  }

  .rendezvous-edit-container {
    background: #F2F2F2;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(68, 83, 166, 0.15);
  }

  .rendezvous-edit-title {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    color: #4453A6;
    letter-spacing: 1.5px;
    text-align: center;
    margin-bottom: 40px;
    text-transform: uppercase;
  }

  .form-row {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .form-group {
    flex: 0 0 50%;
    padding: 0 15px;
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .rendezvous-edit-input {
    width: 100%;
    height: 50px;
    border: 2px solid #dee2e6;
    border-radius: 8px;
    padding: 12px 15px;
    background: white;
    box-sizing: border-box;
  }

  .rendezvous-edit-input:focus {
    border-color: #4453A6;
    box-shadow: 0 0 0 0.2rem rgba(68, 83, 166, 0.25);
    outline: none;
  }

  .rendezvous-edit-action-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
  }

  .rendezvous-edit-btn-save {
    background-color: #4453A6;
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    border: none;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(68, 83, 166, 0.3);
    font-family: 'Poppins', sans-serif;
    letter-spacing: 1px;
  }

  .rendezvous-edit-btn-cancel {
    background-color: #F2811D;
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    border: none;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(242, 129, 29, 0.3);
    font-family: 'Poppins', sans-serif;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .form-group {
      flex: 0 0 100%;
    }
    
    .rendezvous-edit-action-buttons {
      flex-direction: column;
      gap: 15px;
    }
    
    .rendezvous-edit-btn-save, 
    .rendezvous-edit-btn-cancel {
      width: 100%;
    }
  }
</style>
{% endblock %}

{% block body %}
<section class="rendezvous-edit-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="rendezvous-edit-container">
                    <h2 class="rendezvous-edit-title">Modifier le Rendez-vous</h2>
                    
                    {{ form_start(form, {'attr': {'class': 'rendezvous-edit-form'}}) }}
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.date) }}
                                {{ form_widget(form.date, {'attr': {'class': 'rendezvous-edit-input'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.heure) }}
                                {{ form_widget(form.heure, {'attr': {'class': 'rendezvous-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.cinProprietaire) }}
                                {{ form_widget(form.cinProprietaire, {'attr': {'class': 'rendezvous-edit-input'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.cinEtudiant) }}
                                {{ form_widget(form.cinEtudiant, {'attr': {'class': 'rendezvous-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.idLogement) }}
                                {{ form_widget(form.idLogement, {'attr': {'class': 'rendezvous-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="rendezvous-edit-action-buttons">
                            <button type="submit" class="rendezvous-edit-btn-save">
                                <i class="fas fa-save mr-2"></i> Confirmer modifications
                            </button>
                            <a href="{{ path('app_rendezvous_index') }}" class="rendezvous-edit-btn-cancel">
                                <i class="fas fa-arrow-left mr-2"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}