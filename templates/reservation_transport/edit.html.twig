{% extends 'base.html.twig' %}

{% block title %}Modifier Rendez-vous Transport{% endblock %}

{% block stylesheets %}
<style>
  /* Edit Page Specific Styles */
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&display=swap');
  
  .transport-edit-section {
    padding: 80px 0;
    background-color: light;
  }

  .transport-edit-container {
    background: #F2F2F2;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(68, 83, 166, 0.15);
  }

  .transport-edit-title {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    color: #4453A6;
    letter-spacing: 1.5px;
    text-align: center;
    margin-bottom: 40px;
    text-transform: uppercase;
  }

  .form-row {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .form-group {
    flex: 0 0 50%;
    padding: 0 15px;
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .transport-edit-input {
    width: 100%;
    height: 50px;
    border: 2px solid #dee2e6;
    border-radius: 8px;
    padding: 12px 15px;
    background: white;
    box-sizing: border-box;
  }

  .transport-edit-input:focus {
    border-color: #4453A6;
    box-shadow: 0 0 0 0.2rem rgba(68, 83, 166, 0.25);
    outline: none;
  }

  .transport-edit-action-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 40px;
  }

  .transport-edit-btn-save {
    background-color: #4453A6;
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    border: none;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(68, 83, 166, 0.3);
    font-family: 'Poppins', sans-serif;
    letter-spacing: 1px;
  }

  .transport-edit-btn-cancel {
    background-color: #F2811D;
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    border: none;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(242, 129, 29, 0.3);
    font-family: 'Poppins', sans-serif;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .form-group {
      flex: 0 0 100%;
    }
    
    .transport-edit-action-buttons {
      flex-direction: column;
      gap: 15px;
    }
    
    .transport-edit-btn-save, 
    .transport-edit-btn-cancel {
      width: 100%;
    }
  }
</style>
{% endblock %}

{% block body %}
<section class="transport-edit-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="transport-edit-container">
                    <h2 class="transport-edit-title">Modifiez votre r√©servation</h2>
                    
                    {{ form_start(form, {'attr': {'class': 'transport-edit-form'}}) }}
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.adresseDepart) }}
                                {{ form_widget(form.adresseDepart, {'attr': {'class': 'transport-edit-input'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.adresseDestination) }}
                                {{ form_widget(form.adresseDestination, {'attr': {'class': 'transport-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.tempsArrivage) }}
                                {{ form_widget(form.tempsArrivage, {'attr': {'class': 'transport-edit-input'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.cinEtudiant) }}
                                {{ form_widget(form.cinEtudiant, {'attr': {'class': 'transport-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                {{ form_label(form.cinTransporteur) }}
                                {{ form_widget(form.cinTransporteur, {'attr': {'class': 'transport-edit-input'}}) }}
                            </div>
                        </div>
                        
                        <div class="transport-edit-action-buttons">
                            <button type="submit" class="transport-edit-btn-save">
                                <i class="fas fa-check-circle mr-2"></i> Confirmer modifications
                            </button>
                            <a href="{{ path('app_reservation_transport_index') }}" class="transport-edit-btn-cancel">
                                <i class="fas fa-times-circle mr-2"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}