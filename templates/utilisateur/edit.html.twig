{% extends 'base.html.twig' %}

{% block title %}Edit User Profile{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            margin: 30px auto 20px;
            width: 800px;
        }
        
        .edit-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }
        
        .form-group {
            margin-bottom: 25px;
            padding-left: 100px;
        }
        
        .form-label {
            display: block;
            font-size: 14px;
            color: #777;
            margin-bottom: 8px;
        }
        
        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }
        
        .button-container {
            display: flex;
            justify-content: center;
            margin-top: 40px;
            gap: 15px;
        }
        
        .btn {
            padding: 12px 25px;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
            min-width: 120px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .btn-primary {
            background-color: #f35525;
            color: white;
            border: none;
        }
        
        .btn-primary:hover {
            background-color: #e04b1b;
        }
        
        .btn-secondary {
            background-color: #f5f5f5;
            color: #333;
            border: 1px solid #ddd;
        }
        
        .btn-secondary:hover {
            background-color: #e9e9e9;
        }
        
        .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }
        
        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
<div class="edit-container">
    <div class="edit-header">
        <h3>Edit User Profile</h3>
    </div>

    {{ form_start(form, {
        'attr': {'class': 'user-edit-form'},
        'method': 'POST',
        'action': path('app_utilisateur_edit', {'cin': utilisateur.cin})
    }) }}
    
        {# Manually include CSRF token since you're using render_rest: false #}
        {{ form_widget(form._token) }}
    
        <div class="form-group">
            {{ form_label(form.cin) }}
            {{ form_widget(form.cin, {'attr': {
                'class': 'form-control readonly-field',
                'readonly': 'readonly'
            }}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'pattern': '[^ @]*@[^ @]*'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.numTel) }}
            {{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.role) }}
            {{ form_widget(form.role, {'attr': {
                'class': 'form-control readonly-field',
                'readonly': 'readonly'
            }}) }}
        </div>
        
        <div class="button-container">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="{{ path('app_utilisateur_show', {'cin': utilisateur.cin}) }}" 
               class="btn btn-secondary">
               Cancel
            </a>
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>
{% endblock %}
