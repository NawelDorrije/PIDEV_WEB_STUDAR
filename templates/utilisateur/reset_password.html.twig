{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block stylesheets %}
    <style>
        .contact-page .col-lg-6 {
            margin: 100px auto;
            padding: 40px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .orange-button {
            background-color: #f35525;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 12px;
            width: 100%;
        }
        .center-title {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 40px;
        }
        .alert {
            position: relative;
            padding: 1rem 1.5rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: 0.375rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .alert-success {
            color: #0f5132;
            background-color: #d1e7dd;
            border-color: #badbcc;
        }
        .alert-danger {
            color: #842029;
            background-color: #f8d7da;
            border-color: #f5c2c7;
        }
        .btn-close {
            position: absolute;
            top: 0.75rem;
            right: 0.75rem;
            background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23000'%3e%3cpath d='M.293.293a1 1 0 011.414 0L8 6.586 14.293.293a1 1 0 111.414 1.414L9.414 8l6.293 6.293a1 1 0 01-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 01-1.414-1.414L6.586 8 .293 1.707a1 1 0 010-1.414z'/%3e%3c/svg%3e") center/1em auto no-repeat;
            width: 1em;
            height: 1em;
            padding: 0.25em;
            border: 0;
            border-radius: 0.375rem;
            opacity: 0.5;
        }
    </style>
{% endblock %}

{% block body %}
<div class="contact-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3 class="center-title">Réinitialiser le mot de passe</h3>
                
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" action="{{ path('app_reset_password') }}">
                    <div class="mb-3">
                        <label for="new_password" class="form-label">Nouveau mot de passe</label>
                        <input type="password" name="new_password" id="new_password" class="form-control" placeholder="Entrez le nouveau mot de passe" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirmez le mot de passe" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
                    <button type="submit" class="orange-button">Enregistrer</button>
                </form>
                <div class="center">
                    <a href="{{ path('app_utilisateur_signin') }}" style="text-decoration: underline;">Retour à la connexion</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}