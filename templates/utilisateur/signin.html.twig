            popup.style.zIndex = '10000';
            popup.innerHTML = `{{ message|e('js') }}`;
            
            document.body.appendChild(popup);
            
            setTimeout(() => {
                popup.remove();
            }, 5000);
        });
        
    </script>
     <script>
