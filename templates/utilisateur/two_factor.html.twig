                    </div>
                    <div class="benefit-item">
                        <img style="height: 40px;margin-top: 10px;margin-bottom: 20px;" src="{{ asset('images/email-icon.png') }}" alt="Communication" class="benefit-icon"/>
                        <p class="benefit-text">Communication facile !</p>
                    </div>
                </div>
            </div>

            <!-- Right Column - Form -->
            <div class="col-lg-6 right-column">
                <h3 class="center-title">Vérification de l'authentification à deux facteurs</h3>
                
                <form method="post" action="{{ path('app_two_factor_check') }}" id="twoFactorForm" class="mt-4" novalidate>
                    <div class="mb-3">
                        <input 
                            type="text" 
                            name="totp_code"
                            id="inputTotpCode" 
                            class="form-control"
                            placeholder="Entrez votre code 2FA"
                            required
                            autofocus
                        >
                        {% if error %}
